{{#if resume.work.length}}
<hr>
<section id="work">
	<h2>Experience</h2>
	{{#each resume.work}}
	<div class="item">
		{{#if name}}
		<h3 class="name">
			{{name}}
		</h3>
		{{/if}}
		<ul class="details">
			<li class="date">
				{{#if startDate}}
				<span class="startDate">
					{{moment startDate format="MMMM YYYY"}}
				</span>
				{{/if}}
				{{#if endDate}}
				<span class="endDate">
					- {{moment endDate format="MMMM YYYY"}}
				</span>
				{{else}}
				<span class="endDate">
					- Present
				</span>
				{{/if}}
			</li>
			{{#if position}}
			<li class="position">
				{{position}}
			</li>
			{{/if}}
			{{#if website}}
			<li class="website">
				<a href="{{website}}">{{website}}</a>
			</li>
			{{/if}}
		</ul>
		{{#if summary}}
		<div class="summary">
			{{{summary}}}
		</div>
		{{/if}}
		{{#if highlights.length}}
		<ul class="highlights">
			{{#each highlights}}
			<li>{{.}}</li>
			{{/each}}
		</ul>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}